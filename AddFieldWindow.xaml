<Window x:Class="WpfApp5.AddFieldWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp5"
        mc:Ignorable="d"
        Title="AddFieldWindow" Height="175" Width="314">
    <Grid Margin="0,0,0,11">
        <StackPanel Orientation="Horizontal" Margin="0,10,0,34" VerticalAlignment="Top">
            <Label Content="Field Name:" Width="100"/>
            <TextBox x:Name="txtFieldName" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,40,0,0" VerticalAlignment="Top">
            <Label Content="Field Value:" Width="100"/>
            <TextBox x:Name="txtFieldValue" Width="200"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Margin="0,85,0,0" VerticalAlignment="Top" HorizontalAlignment="Center">
            <Button x:Name="addNewField" Content="Save" Width="100" Click="addNewField_Click"/>
            <Button x:Name="cancel" Content="Cancel" Margin="10,0,0,0" Width="100" Click="cancel_Click"/>
        </StackPanel>

    </Grid>
</Window>
